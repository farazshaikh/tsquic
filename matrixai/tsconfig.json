{
  "compilerOptions": {
    "module": "CommonJS",             // Use CommonJS for better compatibility
    "target": "ES2020",               // Keep ES2017 for async/await support
    "moduleResolution": "Node",       // Node.js-style module resolution
    "esModuleInterop": true,          // Support CommonJS default imports
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "sourceMap": true,
    "strict": true,                   // Enforce stricter checks
    "lib": ["dom", "DOM.Iterable", "ESNext"]
  }
}
